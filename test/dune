(executable
  (name testFakeHTML)
  (modules testFakeHTML)
  (libraries ounit))

(executable
  (name testFakeRunner)
  (modules testFakeRunner)
  (libraries ounit ounit.threads))

(executable
  (name testFakeShared)
  (modules testFakeShared)
  (libraries ounit ounit.threads))

(executable
  (name test)
  (modules
    test testOUnit1 testOUnit2 testConf testOUnitTest testCommon
    testOUnitAssert testOUnitDiff testOtherTests testRunner testShared
    testOUnitBracket testOUnitChooser)
  (libraries ounit ounit.advanced str testcommon))

(alias
  (name runtest)
  (deps test.exe testFakeHTML.exe testFakeRunner.exe testFakeShared.exe)
  (action
    (run ./test.exe -testFakeHTML ./testFakeHTML.exe -testFakeRunner
      ./testFakeRunner.exe -testFakeShared ./testFakeShared.exe)))
